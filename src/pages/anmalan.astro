---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Anmälan',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Bli medlem!" />

  <ContactUs
    name="anmalan"
    id="form"
    title="Bli del av Ung i världen"
    subtitle="Bla bla - För specifika kontaktuppgifter till vår styrelse finns kontakterna -här-"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Meddelande',
    }}
    disclaimer={{
      label:
        'Genom att skicka detta formulär, går du med på att vi sparar den personliga information som du angett.',
    }}
    button="Skicka"
    description="Vi svarar ofta inom 24 timmar"
    submitMessage="Välkommen!"
  />

</Layout>
