---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Kontakta oss här!" />

  <ContactUs
    id="form"
    title="Bli del av Ung i världen"
    subtitle="Bla bla - För specifika kontaktuppgifter till vår styrelse finns kontakterna -här-"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email/@',
      },
    ]}
    textarea={{
      label: 'Meddelande',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    button="Skicka"
    description="Vi svarar ofta inom 24 timmar"
  />

</Layout>
