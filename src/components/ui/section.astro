---
interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
}

const { title, content, icon, alt, reverse } = Astro.props as SectionProps;
---

<div class={`flex flex-col md:flex-row ${reverse ? 'md:flex-row-reverse' : ''} items-center mb-10`}>
  <div class="md:w-1/2 p-4">
    <img src={icon} alt={alt} class="w-16 h-16 md:w-24 md:h-24" />
  </div>
  <div class="md:w-1/2 p-4">
    <h2 class="text-2xl font-bold">{title}</h2>
    <p class="mt-2">{content}</p>
  </div>
</div>