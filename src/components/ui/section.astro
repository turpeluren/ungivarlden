---
export interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
}

const { title, content, icon, alt, reverse } = Astro.props;
---
<>
<div class={`flex ${reverse ? 'flex-row-reverse' : 'flex-row'} max-w-7xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full`}> 
  <!-- Icon -->
  <img src={icon.src} alt={alt} class="w-12 h-12 mr-4" />

  <!-- Content -->
  <div>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p>{content}</p>
  </div>
</div>
</>