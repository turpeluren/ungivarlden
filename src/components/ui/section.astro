---
export interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
}

const { title, content, icon, alt, reverse } = Astro.props as SectionProps;
---

<section class={`py-10 ${reverse ? 'bg-gray-100' : 'bg-white'} flex flex-col md:flex-row ${reverse ? 'md:flex-row-reverse' : ''} items-center`}>
  <div class="md:w-1/2 p-6">
    <img src={icon} alt={alt} class="mx-auto" />
  </div>
  <div class="md:w-1/2 p-6">
    <h2 class="text-2xl font-bold mb-4">{title}</h2>
    <p class="text-lg">{content}</p>
  </div>
</section>