---
export interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
}


const { title, content, icon, alt, reverse } = Astro.props;
---

<div class={`flex ${reverse ? 'flex-row-reverse' : 'flex-row'} items-center p-6 bg-gradient-to-b from-secondary to-page opacity-40 dark:bg-transparent`}>
  <!-- Icon -->
  <img src={icon.src} alt={alt} class="w-12 h-12 mr-4" />

  <!-- Content -->
  <div>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p>{content}</p>
  </div>
</div>