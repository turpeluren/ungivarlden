---
export interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
}

const { title, content, icon, alt, reverse } = Astro.props as SectionProps;
---

<section class={`flex ${reverse ? 'flex-row-reverse' : 'flex-row'} items-center py-8 bg-white dark:bg-gray-800`}>
  <div class="flex-shrink-0 w-1/3 p-4">
    <img src={icon} alt={alt} class="w-16 h-16"/>
  </div>
  <div class="w-2/3 p-4">
    <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">{title}</h2>
    <p class="text-gray-700 dark:text-gray-300">{content}</p>
  </div>
</section>