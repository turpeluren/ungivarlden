---
import Image from '~/components/common/Image.astro';
import WidgetWrapper from './WidgetWrapper.astro';

export interface SectionProps {
  id: string;
  title: string;
  content: string;
  image: { src: string; alt: string };
  reverse: boolean;
  titleColor: string;
}

const { id, title, content, image, reverse, titleColor, bg } = Astro.props;
---

<div id={id} class={`flex ${reverse ? 'sm:flex-row-reverse flex-col' : 'sm:flex-row flex-col'} items-start max-w-7xl mx-auto py-8 px-6 scroll-m-12`}>
  <!-- Icon -->
  <Image {...image} class={`${reverse ? 'sm:ml-6 self-end sm:self-auto' : 'sm:mr-6'} w-24 sm:w-12 md:w-32 mt-8 mb-4 pointer-events-none`} />

  <!-- Content with Cloud Background -->
  <div class="relative bg-white p-6 bg-opacity-50 rounded-lg shadow-lg sm:max-w-lg">
    <!-- Cloud Background -->
    <div class="absolute inset-0 rounded-lg shadow-md pointer-events-none"></div>
    
    <!-- Title with different colors -->
    <h3 class={`text-2xl font-bold mb-4 ${titleColor}`}>
      {title}
    </h3>
    
    <!-- Content text -->
    <p class="text-lg text-gray-700 dark:text-gray-300">{content}</p>
  </div>
</div>