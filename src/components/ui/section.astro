---
export interface SectionProps {
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
  titleColor: string; // Added for dynamic title color
}

const { title, content, icon, alt, reverse, titleColor } = Astro.props;
---

<>
  <div class={`flex ${reverse ? 'flex-row-reverse' : 'flex-row'} items-center p-6 bg-opacity-40 dark:bg-transparent`}>
    <!-- Icon -->
    <img src={icon} alt={alt} class="w-16 h-16 mr-6" />

    <!-- Content -->
    <div>
      <!-- Title with different colors -->
      <h3 class={`text-2xl font-bold mb-4 ${titleColor}`}>
        {title}
      </h3>
      <!-- Content text -->
      <p class="text-lg text-gray-700 dark:text-gray-300">{content}</p>
    </div>
  </div>
</>
