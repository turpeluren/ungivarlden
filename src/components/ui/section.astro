---
export interface SectionProps {
  id: string; // Add id to props
  title: string;
  content: string;
  icon: string;
  alt: string;
  reverse: boolean;
  titleColor: string;
}

const { id, title, content, icon, alt, reverse, titleColor } = Astro.props;
---

<div id={id} class={`flex ${reverse ? 'flex-row-reverse' : 'flex-row'} items-center py-8 px-6`}>
  <!-- Icon -->
  <img src={icon} alt={alt} class="w-12 h-12 mr-6" />

  <!-- Content with Cloud Background -->
  <div class="relative bg-white dark:bg-gray-900 p-6 bg-opacity-10 rounded-lg shadow-lg max-w-md">
    <!-- Cloud Background -->
    <div class="absolute inset-0 bg-white dark:bg-gray-800 bg-opacity-10 rounded-lg shadow-md pointer-events-none"></div>
    
    <!-- Title with different colors -->
    <h3 class={`text-2xl font-bold mb-4 ${titleColor}`}>
      {title}
    </h3>
    
    <!-- Content text -->
    <p class="text-base text-gray-700 dark:text-gray-300">{content}</p>
  </div>
</div>