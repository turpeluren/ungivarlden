---
const {
    color,
    bg,
    bottom = false,
    variant = 'primary',
} = Astro.props;

const variants = {
  primary: 'primary',
  secondary: 'secondary',
  tertiary: 'tertiary',
  quaternary: 'quaternary',
}
---

<div class={"relative scale-y-[100%] "+(bg ? bg+" h-36 " : "")+variants[variant]}>
    <!-- flex-row med flera waves så det går att ha kortare -->
        <div class={color+" base "+(bottom ? "bottom" : "")}>
            <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
            </svg>
        </div>
</div>

<style>
    .flip {
        transform: rotate(180deg);
    }

    .base {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
    }

    .bottom {
        top: unset;
        bottom: 0;
        transform: rotate(180deg);
    }

    .base svg {
        position: relative;
        display: block;
        width: calc(100% + 1.3px);
        height: 150px;
    }

    .secondary svg {
        width: calc(125% + 1.3px);
        height: 167px;
        transform: scaleX(-1);
    }

    .tertiary svg {
        width: calc(500% + 1.3px);
        height: 400px;
        transform: scaleX(1);
    }

    .quaternary svg {
        width: calc(100% + 1.3px);
        height: 200px;
        transform: scaleX(-1);
    }
</style>