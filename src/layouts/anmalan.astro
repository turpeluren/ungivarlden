---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Bli medlem',
};



const metadata = {
  title: 'Bli medlem',
};

const {
  frontmatter
} = Astro.props;
---


<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    title={frontmatter.title}
    tagline={frontmatter.tagline}
    subtitle={frontmatter.subtitle}
  />

  
  <ContactUs
    name="Bli medlem"
    id="form"
    tagline={frontmatter.messageBoxTagline}
    title={frontmatter.messageBoxTitle}
    subtitle={frontmatter.messageBoxSubtitle}
    inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Namn',
        },
        {
          type: 'email',
          name: 'email',
          label: 'E-postadress',
        },
        {
          type: 'text',
          name: 'phone',
          label: 'Telefonnummer',
        },
        {
          type: 'text',
          name: 'birthdate',
          label: 'Födelsedatum (Endast personer upp till 29 år kan anmäla sig, ej personnummer)',
        },
        // Checkbox inputs for "Välj engagemang"
        {
          type: 'checkbox',
          name: 'nyhetsvan',
          label: 'Nyhetsvän',
          description: 'Jag vill få regelbundna uppdateringar om föreningen, pågående event och projekt.',
        },
        {
          type: 'checkbox',
          name: 'volontar',
          label: 'Volontär',
          description: 'Jag vill anmäla mig som volontär för det senaste EU-projektet.',
        },
        // Checkbox inputs for "Vem är du?"
        {
          type: 'checkbox',
          name: 'student',
          label: 'Student',
        },
        {
          type: 'checkbox',
          name: 'forskare',
          label: 'Forskare',
        },
        {
          type: 'checkbox',
          name: 'journalist',
          label: 'Journalist',
        },
        {
          type: 'checkbox',
          name: 'politiker',
          label: 'Politiker',
        },
        {
          type: 'checkbox',
          name: 'civilsamhället',
          label: 'Arbetar med globala frågor - Civilsamhället',
        },
        {
          type: 'checkbox',
          name: 'myndighet',
          label: 'Arbetar med globala frågor - Myndighet',
        },
        {
          type: 'checkbox',
          name: 'foretag',
          label: 'Arbetar med globala frågor - Företag',
        },
        {
          type: 'checkbox',
          name: 'mellanstatlig',
          label: 'Arbetar med globala frågor - Mellanstatlig org.',
        },
        {
          type: 'checkbox',
          name: 'yrkesverksam',
          label: 'Yrkesverksam, inte inom globala frågor',
        },
        {
          type: 'checkbox',
          name: 'pensionar_aktiv',
          label: 'Pensionär, aktiv inom globala frågor',
        },
        {
          type: 'checkbox',
          name: 'pensionar_inaktiv',
          label: 'Pensionär, inte aktiv inom globala frågor',
        },
        {
          type: 'text',
          name: 'other',
          label: 'Annat: ',
          placeholder: 'Ange annan beskrivning',
        },
      ]}



<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->


  <HeroText
    tagline={frontmatter.tagline}
    title={frontmatter.title}
    subtitle={frontmatter.subtitle}
     />


  { frontmatter.checkBoxText ? (
    <ContactUs
      name="bli-medlem"
      id="form"
      title={frontmatter.formTitle}
      subtitle={frontmatter.formSubtitle}
      inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Namn',
        },
        {
          type: 'email',
          name: 'email',
          label: 'Email',
        },
        {
          type: 'text',
          name: 'Telefonnummer',
          label: 'Telefonnummer',
        },
        {
          type: 'text',
          name: 'Födelsedatum ',
          label: 'Födelsedatum',
        },
        {
          type: 'text',
          name: 'Engagemang',
          label: 'Välj engagemang',
        },
      ]}

      textarea={{
        label: 'Övrigt',
        name: 'övrigt',
      }}
      disclaimer={{label: frontmatter.checkBoxText}}
      button="Skicka"
      description="Vi svarar ofta inom 24 timmar"
      submitMessage={frontmatter.submitText}
    />
  ) : (
    <ContactUs
      name="bli-medlem"
      id="form"
      title={frontmatter.formTitle}
      subtitle={frontmatter.formSubtitle}
      inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Namn',
        },
        {
          type: 'email',
          name: 'email',
          label: 'Email',
        },
      ]}
      textarea={{
        label: 'Övrigt',
        name: 'övrigt',
      }}
      button="Skicka"
      description="Vi svarar ofta inom 24 timmar"
      submitMessage={frontmatter.submitText}
    />
  )}

</Layout>
