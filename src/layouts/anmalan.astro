---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import FeaturesLinks from '~/components/widgets/FeaturesLinks.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Bli medlem',
  formtitle: "Välkommen till Ung i världen! Vi är en lokalförening som brinner för att ge ungdomar möjlighet att engagera sig i globala utvecklingsfrågor. Hos oss kan du vara med och skapa en bättre värld, samtidigt som du får chansen att utvecklas och träffa likasinnade. Oavsett om du vill hålla dig uppdaterad om våra senaste event och nyheter, eller om du vill ta steget och bli volontär i vårt senaste EU-projekt, har vi en plats för dig. Genom att skicka in detta formulär samtycker jag till att Ung i världen lagrar och hanterar mina personuppgifter enligt gällande dataskyddsförordning (GDPR). Uppgifterna kommer endast att användas för att administrera mitt engagemang i föreningen och jag kan när som helst begära att få mina uppgifter raderade eller ändrade genom att kontakta oss på Ungivärlden.org@gmail.com."
};

const {
  frontmatter
} = Astro.props;
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    title={frontmatter.title}
    tagline={frontmatter.tagline}
    formTitle={frontmatter.formTitle}
    subtitle={frontmatter.subtitle}
  
   />

  <ContactUs
    name="Bli medlem"
    id="form"
    tagline={frontmatter.messageBoxTagline}
    title={frontmatter.messageBoxTitle}
    formTitle={frontmatter.messageBoxTitle}
    subtitle={frontmatter.messageBoxSubtitle}


    inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Namn',
        },
        {
          type: 'email',
          name: 'email',
          label: 'E-postadress',
        },
        {
          type: 'text',
          name: 'phone',
          label: 'Telefonnummer',
        },
        {
          type: 'text',
          name: 'birthdate',
          label: 'Födelsedatum (Endast personer upp till 29 år kan anmäla sig, ej personnummer)',
        },
        {
          type: 'checkbox',
          name: 'nyhetsvan',
          label: 'Nyhetsvän',
          description: 'Jag vill få regelbundna uppdateringar om föreningen, pågående event och projekt.',
        },
        {
          type: 'checkbox',
          name: 'volontar',
          label: 'Volontär',
          description: 'Jag vill anmäla mig som volontär för det senaste EU-projektet.',
        },
        // Checkbox inputs for "Vem är du?"
        {
          type: 'checkbox',
          name: 'student',
          label: 'Student',
        },
        {
          type: 'checkbox',
          name: 'forskare',
          label: 'Forskare',
        },
        {
          type: 'checkbox',
          name: 'journalist',
          label: 'Journalist',
        },
        {
          type: 'checkbox',
          name: 'politiker',
          label: 'Politiker',
        },
        {
          type: 'checkbox',
          name: 'civilsamhället',
          label: 'Arbetar med globala frågor - Civilsamhället',
        },
        {
          type: 'checkbox',
          name: 'myndighet',
          label: 'Arbetar med globala frågor - Myndighet',
        },
        {
          type: 'checkbox',
          name: 'foretag',
          label: 'Arbetar med globala frågor - Företag',
        },
        {
          type: 'checkbox',
          name: 'mellanstatlig',
          label: 'Arbetar med globala frågor - Mellanstatlig org.',
        },
        {
          type: 'checkbox',
          name: 'yrkesverksam',
          label: 'Yrkesverksam, inte inom globala frågor',
        },
        {
          type: 'checkbox',
          name: 'pensionar_aktiv',
          label: 'Pensionär, aktiv inom globala frågor',
        },
        {
          type: 'checkbox',
          name: 'pensionar_inaktiv',
          label: 'Pensionär, inte aktiv inom globala frågor',
        },
        {
          type: 'text',
          name: 'other',
          label: 'Annat: ',
          placeholder: 'Ange annan beskrivning',
        },
    
      ]}
 />

</Layout>     

