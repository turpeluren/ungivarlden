  <Waves bottom bg="opacity-40" variant='quaternary' color="fill-secondary"></Waves>

  <CallToAction
    title={frontmatter.contactTitle}
    subtitle={frontmatter.contactSubtitle}
    actions={[
      {
        variant: 'primary',
        text: 'Kontakt',
        href: getPermalink('/kontakt'),
        icon: 'tabler:bubble',
      }
