---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Waves from '~/components/common/Waves.astro';
import Section from '~/components/ui/section.astro';

import { getPermalink, getBlogPermalink, getAsset } from '../utils/permalinks';

const metadata = {
  title: 'Om oss',
};

const {
  frontmatter
} = Astro.props;

const titleColors = [
  'text-blue-500',
  'text-blue-800',
  'text-purple-500',
  'text-teal-500',
  'text-orange-500',
];

const sections = frontmatter.values.map((value, index) => ({
  id: value.id,
  href: '#'+value.id,
  title: value.title,
  content: value.description,
  image: { src: value.image.src, alt: value.image.alt },
  reverse: index % 2 !== 0,
  titleColor: titleColors[index % titleColors.length], // Apply color cyclically
}));

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* 
    
  -->
  <Hero
    tagline={frontmatter.tagline}
    title={frontmatter.title}
    subtitle={frontmatter.subtitle}
    image={frontmatter.heroImage}
    bg="bg-tertiary"
  >
  </Hero>

  <Waves bottom bg="" color="fill-page"/>
  <Waves bottom bg="" color="fill-secondary opacity-40"/>

  <div class="relative">
    <div class="z-[-1] absolute inset-0 bg-secondary opacity-40 pointer-events-none" />

    {frontmatter.sections.map((title, text, index) => (
      <Section
        key={index}
        id={title}
        title={title}
        content={text}
        reverse={index % 2}
        titleColor=""
      />
    ))}
  </div>

